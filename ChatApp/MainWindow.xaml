<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChatApp" Height="400" Width="400">
    <Grid>
        <ListBox x:Name="ChatMessages" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300"/>
        <TextBox x:Name="MessageInput" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="30"/>
        <Button Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Click="SendMessage_Click"/>
    </Grid>
</Window>



