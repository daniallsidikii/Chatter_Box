<Window x:Class="ChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ChatApp"
        Title="ChatApp" Height="600" Width="950">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
        <local:MessageStyleConverter x:Key="MessageStyleConverter"/>
        <Style x:Key="SentMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#DCF8C6"/>
            <Setter Property="CornerRadius" Value="20,20,0,20"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="MaxWidth" Value="300"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ReceivedMessageStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="20,20,20,0"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="MaxWidth" Value="300"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Gray" BlurRadius="5" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- Sidebar for contacts -->
        <StackPanel Grid.Column="0" Background="#f0f0f0">
            <TextBlock Text="Contacts" FontWeight="Bold" FontSize="16" Margin="10"/>
            <Grid Margin="10">
                <TextBox x:Name="SearchContacts" Height="30" Margin="0,0,0,10"/>
                <TextBlock Text="Search contacts" Foreground="Gray" VerticalAlignment="Center" Margin="5,0,0,0"
                           IsHitTestVisible="False" Visibility="{Binding Text.IsEmpty, ElementName=SearchContacts, Converter={StaticResource BooleanToVisibilityConverter}}"/>
            </Grid>
            <ListBox x:Name="ContactsList" Margin="10" Background="#ffffff" BorderBrush="#dddddd" BorderThickness="1" SelectionChanged="ContactsList_SelectionChanged"/>
        </StackPanel>
        
        <!-- Chat area -->
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Chat header -->
            <StackPanel Orientation="Horizontal" Background="#4CAF50" Height="50" VerticalAlignment="Top">
                <TextBlock Text="{Binding SelectedContact.Name}" VerticalAlignment="Center" Margin="10" Foreground="White" FontSize="16"/>
            </StackPanel>
            
            <!-- Chat messages -->
            <ListBox x:Name="ChatMessages" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10" Background="#ffffff" BorderBrush="#dddddd" BorderThickness="1">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Style="{Binding Sender, Converter={StaticResource MessageStyleConverter}}">
                            <StackPanel Orientation="Vertical" Margin="5">
                                <TextBlock Text="{Binding Sender}" FontSize="12" FontWeight="Bold" Foreground="Gray"/>
                                <TextBlock Text="{Binding Content}" FontSize="14" TextWrapping="Wrap"/>
                                <TextBlock Text="{Binding Timestamp}" FontSize="10" Foreground="Gray" HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <!-- Message input and send button -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="10">
                <TextBox x:Name="MessageInput" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Height="30" Width="600" Margin="0,0,10,0" Text="Type a message..."
                         GotFocus="MessageInput_GotFocus" LostFocus="MessageInput_LostFocus"/>
                <Button Content="Send" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="60" Click="SendMessage_Click" Background="#4CAF50" Foreground="White"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>